<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/ContractTypeList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{contractTypeHome.wire}"/>

   <param name="contractTypeFrom"/>
   <param name="contractTypeId" value="#{contractTypeHome.contractTypeId}"/>


   <navigation from-action="#{contractTypeHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/ContractType.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{contractTypeHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/ContractType.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{contractTypeHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/ContractTypeList.xhtml"/>
      </rule>
   </navigation>

</page>
