<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/ContactList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{contactHome.wire}"/>

   <param name="contactFrom"/>
   <param name="contactId" value="#{contactHome.contactId}"/>
   <param name="contactTypeFrom"/>
   <param name="contactTypeId" value="#{contactTypeHome.contactTypeId}"/>
   <param name="businessEntityId" value="#{businessEntityHome.businessEntityId}"/>



   <navigation from-action="#{contactHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Contact.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{contactHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Contact.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{contactHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/ContactList.xhtml"/>
      </rule>
   </navigation>

</page>
